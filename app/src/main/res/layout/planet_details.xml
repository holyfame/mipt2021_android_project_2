<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <ImageView
        android:id="@+id/planet_details_arrow_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:srcCompat="@drawable/ic_baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/planet_details_picture"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/planet_details_arrow_back"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/planet_details_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Планета обыкновенная"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@id/planet_details_picture"
        app:layout_constraintTop_toBottomOf="@id/planet_details_picture"
        />

    <Button
        android:id="@+id/planet_details_buy_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="В корзину"
        app:layout_constraintTop_toBottomOf="@id/planet_details_title"
        app:layout_constraintStart_toStartOf="@id/planet_details_title"
        >
    </Button>

    <TextView
        android:id="@+id/planet_details_explanation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Как же я люблю жареных уток просто с ума сойти подстрелил парочку с бластера и хаваешь"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/planet_details_picture"
        app:layout_constraintTop_toBottomOf="@id/planet_details_buy_button"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="20dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>