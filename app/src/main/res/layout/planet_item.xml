<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="10dp"
    android:background="?attr/selectableItemBackground"
    >

    <ImageView
        android:id="@+id/planet_item_picture"


        android:layout_width="129dp"
        android:layout_height="131dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/planet_item_title"
        android:layout_width="126dp"
        android:layout_height="33dp"
        android:layout_marginHorizontal="10dp"
        android:textAlignment="center"

        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/planet_item_picture"
        app:layout_constraintVertical_bias="0.0"
        tools:text="Кольца сатУрна" />

    <TextView
        android:id="@+id/planet_item_indicator_purchases"
        android:layout_width="25dp"
        android:layout_height="13dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="10sp"
        android:autoSizeMaxTextSize="100sp"
        android:autoSizeStepGranularity="2sp"        app:layout_constraintStart_toEndOf="@+id/planet_item_buy_button"
        app:layout_constraintTop_toBottomOf="@+id/planet_item_title"
        android:text="+1" />

    <Button
        android:id="@+id/planet_item_buy_button"
        android:layout_width="79dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="@color/teal_700"
        android:saveEnabled="true"
        android:text="В корзину"
        android:textSize="7sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.424"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/planet_item_title"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="TouchTargetSizeCheck" />


